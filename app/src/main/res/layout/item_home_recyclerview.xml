<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/pic_item_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="#EAEAEA"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_error_logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_alignBottom="@id/pic_item_iv"
            android:layout_alignLeft="@id/pic_item_iv"
            android:layout_alignRight="@id/pic_item_iv"
            android:alpha="0.6"
            android:background="@drawable/shape_item_text_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pic_item_iv"
            android:layout_alignLeft="@id/pic_item_iv"
            android:layout_alignRight="@id/pic_item_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="测试文字"
                android:textColor="#eeeeee"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_home_anchor_online"/>

            <TextView
                android:id="@+id/focus_tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="100"
                android:textColor="#eeeeee"
                android:textSize="12sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/mark_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/pic_item_iv"
            android:layout_alignTop="@id/pic_item_iv"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_home_corner_mark_live"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>