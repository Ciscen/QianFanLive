<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0f0f0"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/black"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="13dp"
                android:text="发现"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </RelativeLayout>

        <com.example.ciscen.qianfan.view.viewpager.AutoScrollViewPager
            android:id="@+id/viewPager_find"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/title"
            android:layout_marginBottom="5dp"
            >

        </com.example.ciscen.qianfan.view.viewpager.AutoScrollViewPager>

        <LinearLayout
            android:id="@+id/indicatorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewPager_find"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"/>

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginRight="5dp"
                android:alpha="0.5"
                android:background="@android:color/white"/>

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginRight="5dp"
                android:alpha="0.5"
                android:background="@android:color/white"/>

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:alpha="0.5"
                android:background="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#aaaaaa"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="猜你喜欢"
            android:textColor="#aaaaaa"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#aaaaaa"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_find1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_iv1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_corners_find"
            android:scaleType="center"
            android:src="@mipmap/ic_error_logo"/>

        <ImageView
            android:id="@+id/find_iv2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_corners_find"
            android:scaleType="center"
            android:src="@mipmap/ic_error_logo"/>

        <ImageView
            android:id="@+id/find_iv3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_corners_find"
            android:scaleType="center"
            android:src="@mipmap/ic_error_logo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_find2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_iv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_corners_find"
            android:scaleType="center"
            android:src="@mipmap/ic_error_logo"/>

        <ImageView
            android:id="@+id/find_iv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_corners_find"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_error_logo"/>

        <LinearLayout
            android:id="@+id/change_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_find"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/ic_find_refresh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="换一换"
                android:textColor="#010101"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/store_find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_find_mall_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="商城"
                android:textColor="#010101"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#aaaaaa"/>

        <LinearLayout
            android:id="@+id/fish_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_find_fish_task_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="新手任务"
                android:textColor="#010101"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#EAEAEA"/>

        <LinearLayout
            android:id="@+id/day_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_find_sign_in_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="每日签到"
                android:textColor="#010101"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>